<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.santlani.carpool"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/capopic"
        android:label="@string/app_name"
        android:roundIcon="@drawable/capopic"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.santlani.carpool.FirstActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.santlani.carpool.MyProfile"
            android:label="@string/title_activity_my_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.santlani.carpool.LetsCapo"
            android:label="@string/title_activity_lets_capo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.santlani.carpool.MainActivity"
            android:label="@string/title_activity_main_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.santlani.carpool.GetCapo"
            android:label="@string/title_activity_get_capo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.santlani.carpool.Track"
            android:label="@string/title_activity_track"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.santlani.carpool.LoginBaseActivity" />
    </application>

</manifest>